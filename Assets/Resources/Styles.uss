}

.inventory {
    flex-grow: 1;
    flex-direction: row;
    align-items: flex-start;
    align-self: auto;
    flex-wrap: wrap;
    margin-top: 5px;
    margin-right: 40px;
    margin-bottom: 5px;
    margin-left: 40px;
    height: 40%;
    border-left-color: rgb(118, 53, 24);
    border-right-color: rgb(118, 53, 24);
    border-top-color: rgb(118, 53, 24);
    border-bottom-color: rgb(118, 53, 24);
    border-top-width: 7px;
    border-right-width: 7px;
    border-bottom-width: 7px;
    border-left-width: 7px;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
    border-bottom-right-radius: 10px;
    border-bottom-left-radius: 10px;
    background-color: rgb(243, 222, 194);
}

.item {
    height: 80%;
    width: 90%;
    -unity-background-scale-mode: scale-to-fit;
}

.item-frame {
    flex-grow: 0;
    width: 15%;
    height: 45%;
