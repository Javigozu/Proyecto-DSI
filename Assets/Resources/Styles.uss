.pest-border {
    flex-grow: 1;
    border-left-color: rgb(118, 53, 24);
    border-right-color: rgb(118, 53, 24);
    border-top-color: rgb(118, 53, 24);
    border-bottom-color: rgb(118, 53, 24);
    border-top-width: 7px;
    border-right-width: 7px;
    border-bottom-width: 7px;
    border-left-width: 7px;
    border-top-left-radius: 20px;
    border-top-right-radius: 20px;
    border-bottom-right-radius: 0;
    border-bottom-left-radius: 0;
    justify-content: center;
    align-self: auto;
    align-items: center;
    flex-shrink: 0;
    width: 0;
}

.pest-text {
    -unity-text-align: middle-center;
    -unity-font: url('project://database/Assets/Fonts/InknutAntiqua-Bold.ttf?fileID=12800000&guid=6edfa049d13d41043b213a6fc52b639b&type=3#InknutAntiqua-Bold');
